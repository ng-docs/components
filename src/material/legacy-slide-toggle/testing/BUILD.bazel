load("//tools:defaults.bzl", "ng_test_library", "ng_web_test_suite", "ts_library")

package(default_visibility = ["//visibility:public"])

ts_library(
    name = "testing",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    deps = [
        "//src/cdk/coercion",
        "//src/cdk/testing",
        "//src/material/slide-toggle/testing",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)

ng_test_library(
    name = "unit_tests_lib",
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["shared.spec.ts"],
    ),
    deps = [
        ":testing",
        "//src/material/legacy-slide-toggle",
        "//src/material/slide-toggle/testing:harness_tests_lib",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [":unit_tests_lib"],
)
